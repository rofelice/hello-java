name: CoverityQualityGateDemo
on:
  push:
    branches: [ master ]
  workflow_dispatch:
 
jobs:
  sigma_download_script:
    runs-on: ubuntu-latest
    steps:
      - name: Check out the repo
        uses: actions/checkout@v2      

      - name: Download SIGMA
        run: curl -k -L https://poc01.coverity.synopsys.com/coverity-rapid-scan/sigma      
 
      - name: SIGMA analysis
        run: ./sigma analyze --format github
